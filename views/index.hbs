  <section class="deposit">

   
      <div class="container mt-5">
        <h5 class="mb-4">Deposit Form</h5>
        <form action="/submit" method="POST">
          <div class="row">
            <div class="col-sm-6">
              <div class="form-group">
                <label for="deposit_no">Deposit Number:</label>
                <input type="text" class="form-control" id="deposit_no" name="deposit_no" >
              </div>
              <div class="form-group">
                <label for="depositer_name">Depositer Name:</label>
                <input type="text" class="form-control" id="depositer_name" name="depositer_name" >
              </div>
              <div class="form-group">
                <label for="depositer_name_2">Depositer Name 2:</label>
                <input type="text" class="form-control" id="depositer_name_2" name="depositer_name_2" >
              </div>


              <div class="form-group">
                <label for="dep_type">Deposit Type:</label>
                <input type="text" class="form-control" id="dep_type" name="dep_type" >
              </div>
            </div>

            <div class="col-sm-6">


              <div class="form-group">
                <label for="dep_amount">Deposit Amount:</label>
                <input type="text" class="form-control" id="dep_amount" name="dep_amount" >
              </div>

              <div class="form-group">
                <label for="dep_date">Deposit Date:</label>
                <input type="text" class="form-control" id="dep_date" name="dep_date" >
              </div>

              <div class="form-group">
                <label for="dep_mature">Deposit Maturity Date:</label>
                <input type="text" class="form-control" id="dep_mature" name="dep_mature" >
              </div>

              <div class="form-group">
                <label for="dep_mature_value">Deposit Mature Value:</label>
                <input type="text" class="form-control" id="dep_mature_value" name="dep_mature_value" >
              </div>
            </div>
          </div>

          <button type="submit" class="btn btn-primary">Save Details</button>
        </form>
      </div>



  </section>
  
  <section>
    <div class="container mt-5">
      <form class="form-inline my-2 my-lg-0" action="/user" method="post">
        <label class="mr-2" for="cif_id">Locker Number</label>
        <input class="form-control mr-sm-2" type="text" name="lockerNo" placeholder="Locker Number:" aria-label="Search"
          value={{lockernumber}}>
        <label class="mr-2" for="cif_id">Date</label>
        <input class="form-control mr-sm-2" type="text" name="date" placeholder="Renewal Date:" aria-label="Search"
          value={{date}}>

        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Generate Files</button>
      </form>
    </div>
  </section>
  <section class="info">
    </section>
    </br></br>
    <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h5>Name :{{name}},{{name2}},{{name3}}</h5>
        <span id="nameLabel"></span>
      </div>
      <div class="col-md-6">
        <h5>Deposit Present :{{deposit_info}}</h5>
        <span id="depositPresentLabel"></span>
      </div>
    </div>
  </div>
  </section>
  <section>
    <div class="container mt-5">
      <form class="form-inline my-2 my-lg-0" action="/pdf" method="post">

        {{!-- <div>
